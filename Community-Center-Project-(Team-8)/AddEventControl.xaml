<UserControl x:Class="Community_Center_Project__Team_8_.AddEventControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Community_Center_Project__Team_8_"
             xmlns:wpfTool="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="982" d:DesignWidth="1920">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Name"/>
                <TextBox MinWidth="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Description"/>
                <TextBox MinWidth="200" MinLines="3"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Organizer"/>
                <TextBox MinWidth="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Charge"/>
                <TextBox MinWidth="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <wpfTool:DateTimePicker/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
